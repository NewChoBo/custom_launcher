{
  "mode": "dynamic",
  "ui": {
    "showAppBar": false,
    "colors": {
      "appBarColor": "#2196F3",
      "backgroundColor": "#424242"
    },
    "opacity": {
      "appBarOpacity": 0.5,
      "backgroundOpacity": 0.1
    }
  },
  "window": {
    "size": {
      "windowWidth": "90%",
      "windowHeight": "60%"
    },
    "position": {
      "horizontalPosition": "center",
      "verticalPosition": "bottom",
      "margin": { "top": 40, "right": 20, "bottom": 20, "left": 20 }
    },
    "behavior": {
      "windowLevel": "alwaysOnTop",
      "skipTaskbar": true
    }
  },
  "system": {
    "monitorIndex": 2
  }
}
